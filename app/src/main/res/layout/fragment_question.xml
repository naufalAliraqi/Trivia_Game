<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_question_number"
        tools:text="Question 1" />

    <TextView
        android:id="@+id/text_first"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:background="@drawable/answer_shape"
        android:gravity="center"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@color/answerText"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="something 1" />

    <TextView
        android:id="@+id/text_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:background="@drawable/answer_shape"
        android:gravity="center"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@color/answerText"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="something 2" />

    <TextView
        android:id="@+id/text_third"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:background="@drawable/answer_shape"
        android:gravity="center"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@color/answerText"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/text_fourth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="something 3" />

    <TextView
        android:id="@+id/text_fourth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/answer_shape"
        android:gravity="center"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@color/answerText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="something 4" />

    <View
        android:id="@+id/view_question_number"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/number"
        android:elevation="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_question_number"
        app:layout_constraintEnd_toEndOf="@+id/view_question_number"
        app:layout_constraintStart_toStartOf="@+id/view_question_number"
        app:layout_constraintTop_toTopOf="@+id/view_question_number"
        tools:text="1" />

</androidx.constraintlayout.widget.ConstraintLayout>